webrtc-conference/
├── .env                    # Environment variables
├── .env.example            # Example template
├── .gitignore              # Git ignore
├── package.json            # Dependencies
├── config.js               # Server configuration
├── server.js               # Main server (with HTML injection)
└── public/                 # Static assets (except index.html)
    ├── client.js           # Updated to use window.SERVER_CONFIG
    ├── style.css           # Styles
    └── mediasoup.bundle.js # Mediasoup client (CDNs does not browser ready - need bundle)

Adjust venv


npm install
npm start


nginx setup for location zzy

location /zzy/ {
    proxy_pass http://localhost:3000/zzy/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header X-Forwarded-Host $host;
    proxy_set_header X-Forwarded-Server $host;

    # WebSocket specific settings
#    proxy_set_header Connection $connection_upgrade;
    proxy_set_header Upgrade $http_upgrade;

    # Remove any CSP headers
#    proxy_hide_header Content-Security-Policy;

    # WebSocket buffer settings
    proxy_buffering off;
    proxy_redirect off;

    # Timeouts
    proxy_read_timeout 3600s;
    proxy_send_timeout 3600s;
    proxy_connect_timeout 3600s;
} 
